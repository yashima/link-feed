{
  "manifest_version": 2,
  "name": "LinkFeed Share Button",
  "version": "1.1",
  "description": "Add links to your LinkFeed",
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "96": "icon/icon-96.png"    
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icon/icon-48.png"
    },
    "default_title": "Add current tab to LinkFeed"
  },
   "applications": {
    "gecko": {
      "id": "linkToolButton@pieper.dev"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}
